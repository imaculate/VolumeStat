{
    "name": "VolumeStat",
    "version": "1.0",
    "description": "Maintain audio volume across all tabs!",
    "manifest_version": 2,
    "permissions": ["storage", "tabCapture", "activeTab", "<all_urls>"],
    "options_page": "options.html",
    "browser_action": {},
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}